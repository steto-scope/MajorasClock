<Window x:Class="TerribleFate.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseDown="Window_MouseDown" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#30FFFFFF" Left="0" Top="0" AllowsTransparency="True"
        Title="Overlay" MinHeight="100" MinWidth="100">
    <Grid>
        <TextBlock Text="{Binding Settings.Name}" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="20">
            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Black" GlowSize="6" />
            </TextBlock.BitmapEffect>
        </TextBlock>
    </Grid>
</Window>
